block js

doctype html
html
	head
		include head.pug
		link(href="/style.css" rel="stylesheet")
	body(class=darkmode && "darkmode")
		include menu-drop.pug
		
		.container-fluid
			if particlesFullPage 
				#particles-js.particles-full-page
			include navbar.pug

			if modalType
				.modal-wrapper#modals
					block modals

			#page-content(class=noTop && "no-top", class=noBottom && "no-bottom")
				block content

			include footer.pug
		script(src="/vendor.js")
		script(src="/main.js")
		script(src="/font-awesome.js")